@page
@model INZ_API_POSTGRES.Pages.Account.RegisterModel
@{

}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>

<head>
    <link rel="stylesheet" href="/css/Register.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">
</head>
    <body>
    <div class="registerForm">
        <div class="registerHeader">REGISTER</div>
        <form method="post" asp-page="Register">
            @Html.AntiForgeryToken()
            <div class="input-group">

            <input name="InputUsername" asp-for="@Model.InputUsername" placeholder="Username"  />

            <input name="InputEmail" asp-for="@Model.InputEmail" placeholder="Email" />
            
            <input name="InputPassword" asp-for="@Model.InputPassword" placeholder="Password"/>
            
             <input name="ConfirmPassword" asp-for="@Model.ConfirmPassword" placeholder="Confirm password" />
           
            <div id="error" asp-validation-summary="All"></div>
            

            <button class="registerButton" type="submit">Register</button>
            </div>
        </form>

    </div>
    </body>
</html>
