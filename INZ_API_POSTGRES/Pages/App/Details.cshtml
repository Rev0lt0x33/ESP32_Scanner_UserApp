@page
@model INZ_API_POSTGRES.Pages.App.DataModel
@{
	@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
	Layout = "AppLayout";
}		<link rel="stylesheet" href="/css/devices.css" />
		<h2>@Model.DeviceName</h2>
			<table class="listTable">
				<thead>
					<tr>
						<th>ID</th>
						<th>MAC</th>
						<th>Date</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
				@foreach (var data in Model.DataList)
				{
					<tr>
						<td>@data.Id</td>
						<td>@data.Mac</td>
						<td>@data.Date</td>
						<td>
							<form method="post" asp-page-handler="RemoveInfo" asp-route-id="@data.Id"  asp-route-devID="@Model.DevID">
								
								<button id="removeButton" class="actionButton2" type="submit">Remove</button>
							</form>
						</td>
					</tr>
				}
					
			</tbody>
			</table>
