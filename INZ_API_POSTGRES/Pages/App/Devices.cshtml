@page
@model INZ_API_POSTGRES.Pages.App.DevicesModel
@{
	@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
	Layout = "AppLayout";
}
<link rel="stylesheet" href="/css/devices.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
		  rel="stylesheet">
<h2>Devices</h2>

			<table class="listTable">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>MAC</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
				@foreach (var device in Model.UserDevices)
				{
					<tr>
						<td>@device.Id</td>
						<td>@device.Name</td>
						<td>@device.Mac</td>
						<td>
							<div class="actionButtons">

								<form method="post" asp-page-handler="NavDetails" asp-route-id="@device.Id">								
									<button class ="actionButton2"  type="submit">Details</button>
								</form>
								<form method="post" asp-page-handler="RemoveDevice" asp-route-id="@device.Id">								
									<button class ="actionButton2"  id="removeButton" type="submit">Remove</button>
								</form>
							</div>
						</td>
					</tr>
				}

			</tbody>
			</table>

